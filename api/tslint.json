{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "indent": [true, "spaces", 2],
    "arrow-parens": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "max-line-length": [
      120
    ],
    "no-unused-expression": false,
    "no-shadowed-variable": false,
    "interface-name": [
      "never-prefix"
    ],
    "member-ordering": [
      false
    ],
    "max-classes-per-file": [
      false
    ],
    "no-reference": false,
    "no-namespace": [
      false
    ],
    "no-console": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false
  }
}
