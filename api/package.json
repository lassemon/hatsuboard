{
  "name": "hatsuportal-api",
  "version": "0.0.1",
  "description": "API Service for HatsuPortal Application",
  "main": "server.js",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run swagger-gen && npm run routes-gen && npm run tsc && npm run copy-swagger-ui",
    "coverage": "npm run test-cov && npm run test-remap",
    "postinstall": "npm run build",
    "lint": "tslint ./*.ts ./lib/*.ts ./src/**/*.ts",
    "test": "jest",
    "tsc": "tsc --project tsconfig.json",
    "tsc:watch": "tsc -w",
    "start": "nodemon",
    "start:prod": "node ./dist/server.js",
    "clean": "rimraf dist",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "copy-swagger-ui": "mkdirp ./dist/docs && ncp ./src/swagger-ui ./dist/docs/swagger-ui",
    "tsoa": "tsoa"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "keywords": [
    "api"
  ],
  "author": "HatsuRebals",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.11.1",
    "@types/jest": "^23.0.2",
    "@types/node": "^10.1.4",
    "@types/swagger-ui-express": "^3.0.0",
    "jest": "^23.4.0",
    "mkdirp": "0.5.1",
    "ncp": "^2.0.0",
    "nodemon": "^1.17.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.2",
    "tslint": "^5.10.0",
    "typescript": "2.8.3"
  },
  "dependencies": {
    "express": "^4.16.3",
    "swagger-ui-express": "^3.0.10",
    "body-parser": "^1.18.3",
    "tsoa": "^2.1.7",
    "moment": "^2.22.2"
  }
}
